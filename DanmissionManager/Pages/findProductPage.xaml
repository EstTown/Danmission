<Page x:Class="DanmissionManager.Pages.findProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DanmissionManager.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="840"
      Title="findProductPage">
    <Page.DataContext>
        <local:FindProductViewModel/>
    </Page.DataContext>

    <Grid>
        <ListView Margin="10,73,328,118" Name="lvUsers">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Kategori" Width="50" DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Pris" Width="150" DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Image x:Name="image" Source="/Resources/nazi.jpg" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,73,45,0" Width="250"/>
        <Button x:Name="btn_search" Content="Søg" HorizontalAlignment="Left" Margin="545,23,0,0" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtbox_seach" HorizontalAlignment="Left" Height="23" Margin="10,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="502"/>
    </Grid>
</Page>

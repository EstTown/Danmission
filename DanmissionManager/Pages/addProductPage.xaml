<Page x:Class="DanmissionManager.Pages.addProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:properties="clr-namespace:DanmissionManager.Properties"
      xmlns:local="clr-namespace:DanmissionManager.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="840"
      Title="addProductPage">
    <Page.DataContext>
        <local:CreateProductViewModel/>
    </Page.DataContext>

    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" Margin="0,55,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image x:Name="image" Source="/Resources/placeholder.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="250"/>
        </Border>
        <Button x:Name="btn_ChooseImage" Content="Vælg billede" Margin="0,312,10,0" HorizontalAlignment="Right" Width="252" Height="20" VerticalAlignment="Top"/>

        <Label x:Name="label_title" Background="{Binding Source={x:Static properties:Settings.Default}, Path=GUICOLOR}" FontSize="30" Content="Registrer produkt" VerticalAlignment="Top" Padding="10, 0, 0 ,0"  Height="50" Foreground="White"/>

        <Grid Margin="16,55,261,10">
            <Label x:Name="label_name" Content="Produkt navn:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox" Text="{Binding Product.name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Height="25" Margin="98,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" />

            <Label x:Name="label_description" Content="Beskrivelse:" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox_Copy" Height="25" Margin="98,50,10,0" TextWrapping="Wrap" Text="{Binding Product.desc, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top"/>

            <Label x:Name="label_choosecategory" Content="Vælg kategori:" HorizontalAlignment="Right" Margin="0,89,461,0" VerticalAlignment="Top" Width="92"/>
            <ComboBox x:Name="comboBox_category" ItemsSource="{Binding Path = Categories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="name" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" HorizontalAlignment="Left" Margin="98,92,0,0" VerticalAlignment="Top" Width="455">

            </ComboBox>

            <Label x:Name="label_price" Content="Sæt pris:" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBox_setPrice" Text="{Binding Product.price, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Left" Margin="98,172,296,0" Height="25" Width="169" VerticalAlignment="Top"/>

                <!--
            <TextBox x:Name="txtbox_price" 
                 Text="{Binding Path=SelectedSubCategory.standardprice, Mode=TwoWay}"
                 TextWrapping="Wrap"
                 Height="25"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Right" Margin="0,171,295,340" Width="169" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
-->

            <CheckBox x:Name="checkBox_isUnique" Content="Produktet er unikt" HorizontalAlignment="Left" Margin="98,250,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlockChooseSubCategory" HorizontalAlignment="Left" Margin="17,119,0,0" TextWrapping="Wrap" Text="Vælg underkategori" VerticalAlignment="Top" Width="76" Height="35"/>
            <ComboBox x:Name="comboBox1SubCategory" ItemsSource="{Binding Path = SubCategories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" DisplayMemberPath="name" SelectedItem="{Binding SelectedSubCategory, Mode=TwoWay}" HorizontalAlignment="Left" Margin="98,132,0,0" VerticalAlignment="Top" Width="455"/>
            <Label x:Name="label" Content="Typisk pris" HorizontalAlignment="Left" Margin="307,171,0,0" VerticalAlignment="Top" Width="77"/>
            <TextBox x:Name="typiskPris" HorizontalAlignment="Left" Height="25" Margin="384,171,0,0" TextWrapping="Wrap" Text="{Binding SelectedSubCategory.standardprice, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="169"/>

        </Grid>
        <Button x:Name="btn_addProduct" Content="Tilføj produkt" Command="{Binding Path = CommandAddProduct}" FontSize="30" Margin="0,0,10,10" HorizontalAlignment="Right" Width="252" Height="124" VerticalAlignment="Bottom"/>



    </Grid>
</Page>
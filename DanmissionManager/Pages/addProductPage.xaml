<Page x:Class="DanmissionManager.Pages.addProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:properties="clr-namespace:DanmissionManager.Properties"
      xmlns:local="clr-namespace:DanmissionManager.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="840"
      Title="addProductPage">
    <Page.DataContext>
        <local:CreateProductViewModel/>
    </Page.DataContext>

    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" Margin="0,55,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image x:Name="image" Source="/Resources/placeholder.png" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="250"/>
        </Border>
        <Button x:Name="btn_ChooseImage" Content="Vælg billede" Margin="0,312,10,0" HorizontalAlignment="Right" Width="252" Height="20" VerticalAlignment="Top"/>

        <Label x:Name="label_title" Background="{Binding Source={x:Static properties:Settings.Default}, Path=GUICOLOR}" FontSize="30" Content="Registrer produkt" VerticalAlignment="Top" Padding="10, 0, 0 ,0"  Height="50" Foreground="White"/>

        <Grid Margin="16,55,261,10">
            <Label x:Name="label_name" Content="Produkt navn:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox" Text="{Binding Product.name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Height="22" Margin="98,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top" />

            <Label x:Name="label_description" Content="Beskrivelse:" HorizontalAlignment="Left" Margin="0,46,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox_Copy" Height="22" Margin="98,50,10,0" TextWrapping="Wrap" Text="{Binding Product.desc, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top"/>

            <Label x:Name="label_choosecategory" Content="Vælg kategori:" Margin="0,83,473,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="comboBox_category" ItemsSource="{Binding Path = Categories}" SelectedValue="{Binding Path = SelectedCategory, Mode=OneWaytoSource, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="name" SelectedValuePath="{Binding Categories}" Margin="98,87,10,0" VerticalAlignment="Top"/>

            <Label x:Name="label_price" Content="Sæt pris:" HorizontalAlignment="Left" Margin="0,161,0,0" VerticalAlignment="Top"/>

            <ComboBox x:Name="comboBox_price" Margin="98,165,10,0" VerticalAlignment="Top">
                <ComboBoxItem>Sæt anden pris...</ComboBoxItem>
            </ComboBox>

            <TextBox x:Name="txtbox_price" 
                 Text="{Binding Path=StandardPrice, Mode=TwoWay}"
                 TextWrapping="Wrap"
                 Height="24"
                 VerticalAlignment="Top" Margin="98,200,287,0">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="IsEnabled"
                         Value="False" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=SelectedStandardPrice}"
                                 Value="Sæt anden pris...">
                                <Setter Property="IsEnabled"
                               Value="True" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>


            <CheckBox x:Name="checkBox_isUnique" Content="Produktet er unikt" HorizontalAlignment="Left" Margin="98,238,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlockChooseCategory" HorizontalAlignment="Left" Margin="7,114,0,0" TextWrapping="Wrap" Text="Vælg underkategori" VerticalAlignment="Top" Width="76" Height="35"/>
            <ComboBox x:Name="comboBox1SubCategory" ItemsSource="{Binding Path=Categories}" DisplayMemberPath="subname" Margin="98,127,10,0" VerticalAlignment="Top"/>

        </Grid>
        <Button x:Name="btn_addProduct" Content="Tilføj produkt" Command="{Binding Path = CommandAddProduct}" FontSize="30" Margin="0,0,10,10" HorizontalAlignment="Right" Width="252" Height="124" VerticalAlignment="Bottom"/>



    </Grid>
</Page>